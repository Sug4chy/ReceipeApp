<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10.5dp">

    <View
        android:id="@+id/dot"
        android:layout_width="10.5dp"
        android:layout_height="10.5dp"
        android:layout_marginTop="8.4dp"
        android:background="@drawable/viewholder_allergen_dot_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/allergen_name"
        android:layout_width="52.8dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="42.2dp"
        android:fontFamily="@font/inter"
        android:lineHeight="19.1dp"
        android:textAlignment="center"
        android:textColor="@color/main_text_color"
        android:textFontWeight="200"
        android:textSize="15.8sp"
        app:layout_constraintBottom_toBottomOf="@id/dot"
        app:layout_constraintStart_toEndOf="@id/dot"
        app:layout_constraintTop_toTopOf="@id/dot"
        tools:text="potato" />

    <ImageButton
        android:id="@+id/delete_allergen_btn"
        android:layout_width="26.4dp"
        android:layout_height="26.4dp"
        android:layout_marginStart="100.9dp"
        android:background="@drawable/delete_allergen_btn_bg"
        android:contentDescription="@string/delete_allergen_btn_content_description"
        android:src="@drawable/delete_allergen_btn_img"
        app:layout_constraintBottom_toBottomOf="@id/allergen_name"
        app:layout_constraintStart_toEndOf="@id/allergen_name"
        app:layout_constraintTop_toTopOf="@id/allergen_name" />

</androidx.constraintlayout.widget.ConstraintLayout>